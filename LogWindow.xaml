<Window x:Class="CyberSecurityChatbotGUI.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CyberSecurityChatbotGUI"
        mc:Ignorable="d"
        Title="Activity Log" Height="300" Width="400" ResizeMode="NoResize">
    <Grid Background="#f4f4f4" Margin="10"> 
        <TextBlock Text="Activity Log" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
        <ListBox x:Name="LogList" VerticalAlignment="Top" Margin="0,30,0,0"/>
    </Grid>
</Window>
